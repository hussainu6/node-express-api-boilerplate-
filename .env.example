# Server
NODE_ENV=development
PORT=3000
API_PREFIX=/api

# MongoDB (Prisma)
MONGODB_URI=mongodb://localhost:27017/boilerplate

# Redis
REDIS_URL=redis://localhost:6379
REDIS_KEY_PREFIX=app:

# JWT
JWT_SECRET=your-super-secret-key-min-32-chars
JWT_ACCESS_WEB_EXPIRES_IN=15m
JWT_ACCESS_MOBILE_EXPIRES_IN=10m
JWT_REFRESH_WEB_EXPIRES_IN=7d
JWT_REFRESH_MOBILE_EXPIRES_IN=30d

# CORS (comma-separated origins)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# Rate limiting (requests per window)
RATE_LIMIT_WEB_MAX=300
RATE_LIMIT_WEB_WINDOW_MS=900000
RATE_LIMIT_MOBILE_MAX=100
RATE_LIMIT_MOBILE_WINDOW_MS=900000

# Logging
LOG_LEVEL=info

# OTP (optional)
OTP_TTL_SECONDS=600

# App (for health/docs)
APP_NAME=backend-boilerplate
APP_VERSION=1.0.0
